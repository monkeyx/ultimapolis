<% content_for :title, "Change your password" %>
<% content_for :lead, "<p>Make it secret, make it safe.</p>".html_safe %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put , class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
<fieldset>
    <div class="form-group">
      <label for="password" class="col-lg-2 control-label">New password</label>
      <div class="col-lg-10">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
        <% if @minimum_password_length %>
        <span class="help-block">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label for="password_confirmation" class="col-lg-2 control-label">Confirm new password</label>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-8">
        <%= f.submit "Change password", class: "btn-lg btn-primary" %>
      </div>
    </div>
</fieldset>

<% end %>

<%= render "devise/shared/links" %>
