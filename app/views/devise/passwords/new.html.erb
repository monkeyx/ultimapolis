<% content_for :title, "Forgot your password?" %>
<% content_for :lead, "<p class=\"lead\">Careless citizen let me help you recover what was forgotten.</p>".html_safe %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
<fieldset>
	<div class="form-group">
      <label for="email" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-8">
        <%= f.submit "Send me reset password instructions", class: "btn-lg btn-primary" %>
      </div>
    </div>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>
