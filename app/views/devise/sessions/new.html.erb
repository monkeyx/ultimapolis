<% content_for :title, "Sign In" %>
<% content_for :lead, "<p class=\"lead\">Resume your duties citizen.</p>".html_safe %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <fieldset>
    <div class="form-group">
      <label for="email" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label for="password" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label for="remember_me" class="col-lg-2 control-label">Remember Me</label>
      <div class="col-lg-10">
        <%= f.check_box :remember_me, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2">
        <%=link_to "Become a Citizen", new_citizen_path, class: 'btn-lg btn-primary' %>
      </div>
      <div class="col-lg-2 col-lg-offset-8 text-right">
        <%= f.submit "Sign In", class: "btn-lg btn-primary" %>
      </div>
    </div>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>
