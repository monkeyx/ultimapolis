<% content_for :title, "Ultimapolis" %>
<% unless current_user && !current_user.admin? && current_user.citizen %>
<% content_for :lead, "<p>The future city simulation</p><p><a class=\"btn btn-primary btn-lg\" href=\"#{new_citizen_path}\">Become a Citizen</a>".html_safe %>
<% else %>
<% content_for :lead, "<p>The future city simulation</p>".html_safe %>
<% end %>
<div class="row">
	<div class="col-lg-5">
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title">Current Opportunity</h3>
		  </div>
		  <div class="panel-body">
		  	<% if Event.current_opportunity %>
		  	<%=render partial: '/events/briefing', locals: {event: Event.current_opportunity} %>
		  	<% else %>
		  	<p>There is no current opportunity. There will be another long shortly.</p>
		  	<% end %>
		  </div>
		</div>
	</div>
	<div class="col-lg-2">
		<div class="panel panel-default">
		  <div class="panel-body">
		    Global Stats
		  </div>
		</div>
	</div>
	<div class="col-lg-5">
		<div class="panel panel-danger">
		  <div class="panel-heading">
		    <h3 class="panel-title">Current Crisis</h3>
		  </div>
		  <div class="panel-body">
		    <% if Event.current_crisis %>
		    <%=render partial: '/events/briefing', locals: {event: Event.current_crisis} %>
		  	<% else %>
		  	<p>There is no current crisis. Phew!</p>
		  	<% end %>
		  </div>
		</div>
	</div>
</div>