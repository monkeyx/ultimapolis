<p id="notice"><%= notice %></p>

<h1>Listing Facilities</h1>

<table>
  <thead>
    <tr>
      <th>Citizen</th>
      <th>Facility type</th>
      <th>Powered</th>
      <th>Maintained</th>
      <th>Utilised</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.citizen_id %></td>
        <td><%= facility.facility_type_id %></td>
        <td><%= facility.powered %></td>
        <td><%= facility.maintained %></td>
        <td><%= facility.utilised %></td>
        <td><%= facility.level %></td>
        <td><%= link_to 'Show', facility %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
        <td><%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

