<%= form_for(@bond, html: {class: "form-horizontal"}) do |f| %>
  <% if @bond.errors.any? %>
    <div id="error_explanation" class="alert alert-dismissible alert-warning">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h4><%= pluralize(@bond.errors.count, "error") %> prohibited this bond being bought:</h4>

      <ul>
      <% @bond.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
     <div class="form-group">
      <label for="value" class="col-lg-2 control-label">Value</label>
      <div class="col-lg-10">
        <%=f.select :value, Bond::BOND_VALUES.map{|v| [format_currency(v),v]}, {}, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-left">
        <%= link_to 'Cancel', current_citizen_path('finances'), class: 'btn-lg btn-default' %>
      </div>

      <div class="col-lg-offset-8 col-lg-2 text-right">
        <%= f.submit "Buy Bond", class: "btn-lg btn-primary" %>
      </div>
    </div>

  </fieldset>
<% end %>
