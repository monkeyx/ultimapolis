<% content_for :title, 'Help' %>
<% content_for :lead, "<p class=\"lead\">Confused citizen? Find the answers you need.</p>".html_safe %>
<% i = 0 %>

<% @help_topics.each do |help_topic| %>
  <% if i % 3 == 0 %>
    <div class="row">
  <% end %>

  <div class="col-lg-4">
    <div class="panel panel-primary">
      <div class="panel-heading"><h3 class="panel-title"><%=link_to(help_topic.name, help_topic) %></h3></div>
      <div class="panel-body">
        <p><%=help_topic.summary.html_safe %></p>
      </div>
    </div>
  </div>

  <% if i % 3 == 2 %>
    </div>
  <% end %>

  <% i += 1 %>
<% end %>

<% if i % 3 != 0 %>
    </div>
<% end %>

<h2>Found an issue?</h2>
<p><%=link_to("Please report it", "https://github.com/monkeyx/ultimapolis/issues/new", target: '_new') %></p>