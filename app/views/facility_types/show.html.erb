<% content_for :title, @facility_type.name %>
<% content_for :lead, "<p>#{@facility_type.description}. Only built in #{link_to @facility_type.district.name, @facility_type.district}.</p>".html_safe %>

<% if @facility_type.trade_goods.count > 0 || @facility_type.equipment_types.count > 0 %>
<% 
producable = @facility_type.trade_goods.to_a + @facility_type.equipment_types.to_a
producable.sort!{|a, b| a.name <=> b.name }
%> 
<h2>Production</h2>
<ul class="list-group">
  <% producable.each do |item| %>
  <li class="list-group-item">
    <%=link_to item.name, item %>
  </li>
  <% end %>
</ul>
<% end %>

<h2>Data</h2>
<table class="table table-striped table-hover">
  <tbody>
    <tr>
      <th>Build cost:</th>
      <td>&cent; <%= @facility_type.build_cost %></td>
    </tr>
    <tr>
      <th>Mainteance cost:</th>
      <td>&cent; <%= @facility_type.maintenance_cost %></td>
    </tr>
    <tr>
      <th>Employees:</th>
      <td><%= @facility_type.employees %></td>
    </tr>
    <tr>
      <th>Automation:</th>
      <td><%= @facility_type.automation %></td>
    </tr>
    <% if @facility_type.power_consumption > 0 %>
    <tr>
      <th>Power consumption:</th>
      <td><%= @facility_type.power_consumption %></td>
    </tr>
    <% end %>
    <% if @facility_type.power_generation > 0 %>
    <tr>
      <th>Power generation:</th>
      <td><%= @facility_type.power_generation %></td>
    </tr>
    <% end %>
    <%if @facility_type.pollution > 0 %>
    <tr>
      <th>Pollution:</th>
      <td><%= @facility_type.pollution %></td>
    </tr>
    <% end %>
    <% if @facility_type.housing_mod > 0 %>
    <tr>
      <th>Housing:</th>
      <td><%= @facility_type.housing_mod %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Back', facility_types_path %></p>
