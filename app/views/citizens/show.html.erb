<% content_for :title, @citizen.to_s %>
<% content_for :lead, "<p>#{@citizen.status}</p>".html_safe %>

<% if @citizen.citizen_careers.count > 0 %>
<h2>Careers</h2>
<ul class="list-group">
  <% @citizen.citizen_careers.each do |career| %>
  <li class="list-group-item">
    <%=link_to career.profession.name, career.profession %>
  </li>
  <% end %>
</ul>
<% end %>

<% if @citizen.facts.size > 0 %>
<h2>Facts</h2>
<table class="table table-striped table-hover ">
  <tbody>
    <% @citizen.facts.each do |fact| %>
    <tr>
      <th><%=fact[0]%></th>
      <td><%=fact[1]%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if can?(:edit, @citizen)%><p><%= link_to 'Change Profession', edit_citizen_path(@citizen), class: 'btn-lg btn-primary' %></p><% end %>