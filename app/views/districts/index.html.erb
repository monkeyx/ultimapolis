<h1>Listing Districts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Skill</th>
      <th>Transport capacity</th>
      <th>Civilians</th>
      <th>Automatons</th>
      <th>Unrest</th>
      <th>Health</th>
      <th>Policing</th>
      <th>Social</th>
      <th>Environment</th>
      <th>Housing</th>
      <th>Education</th>
      <th>Community</th>
      <th>Creativity</th>
      <th>Aesthetics</th>
      <th>Crime</th>
      <th>Corruption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= district.skill_id %></td>
        <td><%= district.transport_capacity %></td>
        <td><%= district.civilians %></td>
        <td><%= district.automatons %></td>
        <td><%= district.unrest %></td>
        <td><%= district.health %></td>
        <td><%= district.policing %></td>
        <td><%= district.social %></td>
        <td><%= district.environment %></td>
        <td><%= district.housing %></td>
        <td><%= district.education %></td>
        <td><%= district.community %></td>
        <td><%= district.creativity %></td>
        <td><%= district.aesthetics %></td>
        <td><%= district.crime %></td>
        <td><%= district.corruption %></td>
        <td><%= link_to 'Show', district %></td>
        <td><%= link_to 'Edit', edit_district_path(district) %></td>
        <td><%= link_to 'Destroy', district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

