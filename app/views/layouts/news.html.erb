<!DOCTYPE html>
<html>
<head>
  <title>Ultimapolis: The Future City Simulation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<%=render partial: '/layouts/navbar' %>

		<div class="page-header" id="banner">
	        <div class="row">
	          <div class="col-lg-12">
	          	<div class="jumbotron">
				  <h1>Ultimapolis</h1>
				  <p class="lead">News from the future</p>
				</div>
	          </div>
	        </div>
	    </div>
	
	    <%=render partial: '/layouts/alerts' %>

		<div id="main" class="row">
			<div class="col-lg-12">
				<%= yield %>
			</div>
		</div>
	</div>

</body>
</html>
