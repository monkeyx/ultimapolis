<p id="notice"><%= notice %></p>

<h1>Listing Equipment Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Facility type</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Skill</th>
      <th>Skill modifier</th>
      <th>Exchange price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_types.each do |equipment_type| %>
      <tr>
        <td><%= equipment_type.name %></td>
        <td><%= equipment_type.facility_type_id %></td>
        <td><%= equipment_type.description %></td>
        <td><%= equipment_type.icon %></td>
        <td><%= equipment_type.skill_id %></td>
        <td><%= equipment_type.skill_modifier %></td>
        <td><%= equipment_type.exchange_price %></td>
        <td><%= link_to 'Show', equipment_type %></td>
        <td><%= link_to 'Edit', edit_equipment_type_path(equipment_type) %></td>
        <td><%= link_to 'Destroy', equipment_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

