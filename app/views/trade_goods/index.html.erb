<% content_for :title, 'Trade Goods' %>
<% content_for :lead, "<p class=\"lead\">Produced in <a href=\"/facility_types\">facilities</a> trade goods can be further refined, used in <a href=\"/projects\">projects</a> or turned into <a href=\"/equipment_types\">equipment</a>.</p>".html_safe %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Produced In</th>
      <th>Raw Materials</th>
      <th>For Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trade_goods.each do |trade_good| %>
      <tr>
        <td><!--<%=image_tag(trade_good.icon)%>--></td>
        <td><%= link_to trade_good.name, trade_good %></td>
        <td><%= link_to trade_good.facility_type.name, trade_good.facility_type %></td>
        <td>
          <% trade_good.trade_good_raw_materials.each do |raw_material| %>
          <%=link_to(raw_material.raw_material.to_s, raw_material.raw_material)%> x <%=raw_material.quantity%> &nbsp;
          <% end %>
        </td>
        <td>
          <% if trade_good.for_sale > 0 %>
          <%= trade_good.for_sale %> @ <%=format_currency trade_good.exchange_price %>
          <% else %>
          N/A
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>