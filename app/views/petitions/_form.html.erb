<%= form_for(@petition, html: {class: "form-horizontal"}) do |f| %>
  <% if @petition.errors.any? %>
    <div id="error_explanation" class="alert alert-dismissible alert-warning">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <h4><%= pluralize(@petition.errors.count, "error") %> prohibited this petition being started:</h4>

      <ul>
      <% @petition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <%= f.text_field :name, class: 'form-control' %>
        <span class="help-block">Give your petition a descriptive name that will attract positive attention</span>
      </div>
    </div>

    <div class="form-group">
      <label for="summary" class="col-lg-2 control-label">Summary</label>
      <div class="col-lg-10">
        <%= f.text_area :summary, row: 10, class: 'form-control' %>
        <span class="help-block">Be concise in what you want from the City Core Government</span>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-left">
        <%= link_to 'Cancel', petitions_path, class: 'btn-lg btn-default' %>
      </div>

      <div class="col-lg-offset-8 col-lg-2 text-right">
        <%= f.submit class: "btn-lg btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
